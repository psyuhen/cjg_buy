<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dip" >

        <ImageView
            android:id="@+id/goods_view_iv01"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:layout_centerInParent="true"
            android:background="@drawable/apple" />
    </RelativeLayout>

    <ImageView style="@style/gray_one_style_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/goods_view_title"
            style="@style/black_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goods_view_price"
                style="@style/red_big_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/goods_view_original_price"
                style="@style/gray_normal_underline_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.0dip" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/goods_view_item_height"
        android:layout_marginLeft="8.0dip" >

        <TextView
            android:id="@+id/goods_view_item_tag1"
            style="@style/goods_item_tag_style"
            android:layout_width="@dimen/goods_item_tags_width"
            android:layout_height="@dimen/goods_item_tags_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:background="@drawable/tag_text"
            android:gravity="center" />

        <TextView
            android:id="@+id/goods_view_item_tag2"
            style="@style/goods_item_tag_style"
            android:layout_width="@dimen/goods_item_tags_width"
            android:layout_height="@dimen/goods_item_tags_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@+id/goods_view_item_tag1"
            android:background="@drawable/tag_text"
            android:gravity="center" />
    </RelativeLayout>

    <ImageView style="@style/gray_one_style_line" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/goods_view_item_height"
        android:layout_marginLeft="8.0dip" >

        <TextView
            android:id="@+id/goods_view_weight_text"
            style="@style/gray_small_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:text="@string/goods_view_weight_text" />

        <TextView
            android:id="@+id/goods_view_weight"
            style="@style/black_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@+id/goods_view_weight_text" >
        </TextView>
    </RelativeLayout>

    <ImageView style="@style/gray_one_style_line" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/goods_view_item_height"
        android:layout_marginLeft="8.0dip" >

        <TextView
            android:id="@+id/goods_view_standard_text"
            style="@style/gray_small_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:text="@string/goods_view_standard_text" />

        <TextView
            android:id="@+id/goods_view_standard"
            style="@style/black_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@+id/goods_view_standard_text" >
        </TextView>
    </RelativeLayout>

    <ImageView style="@style/gray_one_style_line" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dip" >

        <TextView
            android:id="@+id/goods_view_details"
            style="@style/black_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/goods_view_details_text" />
    </RelativeLayout>

</LinearLayout>