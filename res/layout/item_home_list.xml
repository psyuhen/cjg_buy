<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kjlibrary_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_ll"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_home_image_height"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_home_image"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_home_image_height"
            android:layout_marginLeft="5.0dip"
            android:layout_toLeftOf="@+id/item_home_buy_btn" />

        <View
            android:layout_width="3.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_toRightOf="@+id/item_home_image"
            android:background="@color/gray_bg" />

        <Button
            android:id="@+id/item_home_buy_btn"
            style="@style/white_normal_style"
            android:layout_width="100.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/orange_btn"
            android:text="@string/item_home_buy_btn_text" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/center_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_home_address"
            style="@style/item_home_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip" />

        <TextView
            android:id="@+id/item_home_distance"
            style="@style/item_home_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_home_phone"
        style="@style/item_home_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip" />

</LinearLayout>