<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kjlibrary_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_home_image_height"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_home_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_home_image_height"
            android:layout_weight="7" />

        <View
            android:layout_width="3.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@color/gray_bg" />

        <Button
            android:id="@+id/item_home_buy_btn"
            style="@style/item_home_buy_btn_text_style"
            android:layout_width="wrap_content"
            android:layout_height="50.0dip"
            android:layout_gravity="center_vertical"
            android:layout_margin="20.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_weight="3"
            android:background="@drawable/complete_btn"
            android:text="@string/item_home_buy_btn_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/center_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_home_address"
            style="@style/item_home_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip" />

        <TextView
            android:id="@+id/item_home_distance"
            style="@style/item_home_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_home_phone"
        style="@style/item_home_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip" />

</LinearLayout>